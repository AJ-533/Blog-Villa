<%- include('./layouts/app-header.ejs') %>


<header class="background" style="height: 65vh;">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
          <h1 style="padding-top: 130px; font-size: 60px; color: white;">Login to your Account</h1>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <form action="/users/login" method="POST" encType="multipart/form-data">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Email</label>
              <input type="email" name="email" placeholder="Email" class="form-control">
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Password</label>
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
          </div>
        
          <div class="form-group my-4 text-center">
            <button class="btn btn-primary" style="background-color: aqua;">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>


<%- include('./layouts/app-footer.ejs') %>