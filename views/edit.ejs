<%- include('./layouts/app-header.ejs') %>



<form action="/posts/<%=currBlog._id%>?_method=PUT" method="POST" class="container border rounded bg-light" style="width:60%; padding:19px; margin-top:2.0em;">
    <h1 style="text-align:center;">Edit <%=currBlog.title%></h1>
    <div class="font-weight-bold" style="margin:0 auto;">
        <div class="form-group">
            <label for="title">Username</label>
            <input type="text" name="blog[username]" placeholder="Username" required class="form-control" id="title" value="<%=currBlog.username%>">
          </div>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="blog[title]" placeholder="Name" required class="form-control" id="title" value="<%=currBlog.title%>">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="blog[description]" placeholder="Description" required class="form-control" id="image" value="<%=currBlog.description%>">
      </div>
      <div class="form-group">
        <label for="body">Content</label>
        <textarea name="blog[body]" placeholder="Content..." required class="form-control" rows="5" id="body"><%=currBlog.content%></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-outline-primary btn-md" style="background-color: aqua;">Save</button>
      </div>
    </div>
  </form>



  <%- include('./layouts/app-footer.ejs') %>